<%= form_for user do |f| %>
  <%= f.label :name %><br>
  <%= f.text_field :name %><br>
  <%= f.label "Height (in inches)" %><br>
  <%= f.number_field :height %><br>
  <%= f.label "How happy are you? (1-5 scale)", in:1..5 %><br>
  <%= f.number_field :happiness %><br>
  <%= f.label "How nauseous are you? (1-5)", in: 1..5 %><br>
  <%= f.number_field :nausea %><br>
  <%= f.label "How many dollars are in your pocket?" %><br>
  <%= f.number_field :tickets %><br>
  <%= f.label "Password" %><br>
  <%= f.password_field :password %><br>
  <%= f.label :admin, "Check box if you are a theme park owner" %><br>
  <%= f.check_box :admin %><br>
  <%= f.submit "Create User" %>
<% end %>
