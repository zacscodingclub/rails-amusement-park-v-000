<div class="background">
  <%= image_tag "http://www.allthingsclipart.com/05/amusement.park.05.jpg", height: "250" %>
</div>

<div class="background">
  <div class="text-center">
    <p>
      <strong>Name: </strong><%= @attraction.name %>
    </p>
    <p>
      <strong>Total Number of Users: </strong><%= @attraction.rides.size %>
    </p>
    <p>
      <strong>Ticket Requirement: </strong><%= @attraction.tickets %>
    </p>
    <p>
      <strong>Height Requirement: </strong><%= @attraction.min_height %> inches
    </p>
    <p>
      <strong>Nausea Rating: </strong><%= @attraction.nausea_rating %>
    </p>
    <p>
      <strong>Happiness Rating: </strong><%= @attraction.happiness_rating %>
    </p>

    <% if current_user.admin %>
      <p><%= link_to "Edit Attraction", edit_attraction_path(@attraction) %></p>
    <% else %>
      <%= form_for Ride.new do |f| %>
        <%= f.hidden_field :attraction_id, value: @attraction.id %>
        <%= f.hidden_field :user_id, value: current_user.id %>
        <%= button_tag "Go on this ride" %>
      <% end %>
    <% end %>

    <%= link_to "Back", :back %>
  </div>
</div>
